<form hideEdit="true" theme="dark">
  <label>Visualise Stats</label>
  <!-- Base query include unique identification string and populations of all input fields required for the history links (visualise & refine) -->
  <search id="base">
    <query>$form.splquery$ | eval m111=111,intent="$form.intent$",adjective="$form.adjective$",entity="$form.entity$",adverb="$form.adverb$",event="$form.event$",stats_op="$form.stats_op$",by="$form.by$"</query>
    <earliest>$time.earliest$</earliest>
    <latest>$time.latest$</latest>
  </search>
  <fieldset submitButton="false" autoRun="true">
    <html>
      <a target="_self" href="nl?query=">Reset the form before starting building a new query (click here to reset)</a>
      <br/>
    </html>
    <!--input type="dropdown" token="visualisation" depends="$form.splquery$" searchWhenChanged="true">
      <label>Visualisation</label>
      <change>
        <condition value="timechart">
          <set token="timechart_tk">timechart</set>
          <unset token="pivot_tk"></unset>
        </condition>
        <condition value="pivot">
          <unset token="timechart_tk"></unset>
          <set token="pivot_tk">pivot</set>
        </condition>
      </change>
      <fieldForLabel>visualisation</fieldForLabel>
      <fieldForValue>visualisation</fieldForValue>
      <choice value="timechart">timechart</choice>
      <choice value="pivot">pivot</choice>
      <default>timechart</default>
    </input-->
    <input type="time" token="time" depends="$form.splquery$" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row depends="$form.intent$,$form.splquery$,$form.entity$">
    <panel>
      <title>Results for: $form.intent$</title>
      <table>
        <title>$form.splquery$</title>
        <search base="base">
          <query>| fields *.name,count*,host*, source*, sourcetype* | fields - _raw</query>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
    <!--panel depends="$timechart_tk$" rejects="$pivot_tk$">
      <title>Time Visualisation</title>
      <chart>
        <search base="base">
          <query>| rename sourcetype AS eventRoot.name | timechart count by $form.entity$.name</query>
        </search>
        <option name="charting.axisTitleX.text">time</option>
        <option name="charting.axisTitleY.text">count_by_$form.entity$</option>
        <option name="charting.chart">line</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel depends="$pivot_tk$" rejects="$timechart_tk$">
      <title>Count Visualisation</title>
      <chart>
        <search base="base">
          <query>| eval eventRoot.name=sourcetype | rename sourcetype AS eventRoot.name | stats count by $form.entity$.name</query>
        </search>
        <option name="charting.chart">line</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel-->
  </row>
  <row depends="$form.intent$">
    <panel>
      <table>
        <search>
          <query>| makeresults | appendcols [| rest /servicesNS/-/-/saved/searches | where title="$form.intent$" | eval result="yes" | table result  ] | eval result=if(result=="yes","yes","no") | eval "Modify Query"="CLICK HERE", "Save Search"="CLICK HERE" | table "Modify Query","Save Search"</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <drilldown>
          <condition field="Modify Query">
            <link>nl?form.intent=$form.intent$&amp;form.manual_tk=on</link>
          </condition>
          <condition field="Save Search">
            <link>savedSearch?form.intent=$form.intent$&amp;form.splquery=$form.splquery$</link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row depends="noshow">
    <panel>
      <html>
        <!--color:#1A237E !important;
          background-color:#F0F0F0 !important; -->
      <style>
        .splunk-textinput {
          min-width: 550px !important;
          width: 750px !important;
          max-width: 850px !important;
          background-color:#030521 !important;
        }
      </style>
    </html>
    </panel>
  </row>
</form>