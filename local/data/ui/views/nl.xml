  <row depends="$intent$,$manual_tk$" rejects="$form.splquery$">
    <panel>
      <title>Select Intent, Query and Action</title>
      <table>
        <search>
          <query>| `process_query("$intent$")`</query>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <fields>["intent","splquery","Visualise Query","Refine Query","status","caveats"]</fields>
        <drilldown>
          <condition field="intent"></condition>
          <condition field="splquery"></condition>
          <condition field="status"></condition>
          <condition field="caveats"></condition>
          <condition field="Visualise Query">
            <link>nl?manual_tk=on&amp;form.visualisation=timechart&amp;timechart_tk=on&amp;form.intent=$row.intent$&amp;form.splquery=$row.splquery$&amp;form.visualise=on&amp;form.adjetive=$row.adjective$&amp;form.entity=$row.entity$&amp;form.adverb=$row.adverb$&amp;form.event=$row.event$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$</link>
          </condition>
          <condition field="Refine Query">
            <link>nl_refine?form.query=$row.query$&amp;form.splquery=$row.splquery$&amp;form.entity=$row.entity$&amp;form.event=$row.event$&amp;form.adjective=$row.adjective$&amp;form.adverb=$row.adverb$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$</link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row depends="$intent$,$manual_tk$,$form.splquery$">
    <panel>
      <title>$form.intent$</title>
      <table>
        <search>
          <query>| `process_query("$form.intent$")`</query>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <fields>["splquery","Visualise Query","Refine Query","status","caveats"]</fields>
        <drilldown>
          <condition field="intent"></condition>
          <condition field="splquery"></condition>
          <condition field="status"></condition>
          <condition field="caveats"></condition>
          <condition field="Visualise Query">
            <link>nl?manual_tk=on&amp;form.visualisation=timechart&amp;timechart_tk=on&amp;form.intent=$row.intent$&amp;form.splquery=$row.splquery$&amp;form.visualise=on&amp;form.adjetive=$row.adjective$&amp;form.entity=$row.entity$&amp;form.adverb=$row.adverb$&amp;form.event=$row.event$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$</link>
          </condition>
          <condition field="Refine Query">
            <link>nl_refine?form.query=$row.query$&amp;form.splquery=$row.splquery$&amp;form.entity=$row.entity$&amp;form.event=$row.event$&amp;form.adjective=$row.adjective$&amp;form.adverb=$row.adverb$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$</link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row depends="$form.splquery$,$form.entity$,$form.visualise$">
    <panel>
      <title>Results for: $form.intent$</title>
      <table>
        <title>$form.splquery$</title>
        <search base="base">
          <query>| fields *.name,count*,host*, source*, sourcetype* | fields - _raw</query>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
    <panel depends="$timechart_tk$" rejects="$pivot_tk$">
      <title>Time Visualisation by Entity</title>
      <chart>
        <search base="base">
          <query>| timechart count AS count_by_$form.entity$ by $form.entity$.name</query>
        </search>
        <option name="charting.axisTitleX.text">time</option>
        <option name="charting.axisTitleY.text">count_by_$form.entity$</option>
        <option name="charting.chart">line</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel depends="$pivot_tk$" rejects="$timechart_tk$">
      <title>Count Visualisation by Entity</title>
      <chart>
        <search base="base">
          <query>| eval eventRoot.name=sourcetype | stats count by $form.entity$.name</query>
        </search>
        <option name="charting.chart">line</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row depends="$form.visualise$">
    <panel>
      <table>
        <search>
          <query>| makeresults | eval "Refine Query"="CLICK HERE" | table "Refine Query"</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <fields>["Refine Query"]</fields>
        <drilldown>
          <condition field="Refine Query">
            <link>nl?form.intent=$form.intent$&amp;manual_tk=on</link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row rejects="$form.intent$">
    <panel>
      <title>Latest queries</title>
      <table>
        <search>
          <query>`process_old_search`| eval "Visualise Query"="CLICK HERE","Refine Query"="CLICK HERE" | dedup splquery | table timestamp,user,intent, adjective, entity, adverb, event, splquery, "Visualise Query", "Refine Query"</query>
          <earliest>$earliest$</earliest> 
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <fields>["timestamp","user","intent","splquery","Visualise Query","Refine Query"]</fields>
        <drilldown>
          <condition field="timestamp"></condition>
          <condition field="user"></condition>
          <condition field="intent"></condition>
          <condition field="splquery"></condition>
          <condition field="Visualise Query">
            <link>nl?manual_tk=on&amp;form.visualisation=timechart&amp;timechart_tk=on&amp;form.intent=$row.intent$&amp;form.splquery=$row.splquery$&amp;form.visualise=on&amp;form.adjetive=$row.adjective$&amp;form.entity=$row.entity$&amp;form.adverb=$row.adverb$&amp;form.event=$row.event$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$</link>
          </condition>
          <condition field="Refine Query">
            <link>nl?form.intent=$row.intent$&amp;manual_tk=on</link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row depends="noshow">
    <panel>
      <html>
        <!--color:#1A237E !important;
          background-color:#F0F0F0 !important; -->
      <style>
        .splunk-textinput {
          min-width: 550px !important;
          width: 750px !important;
          max-width: 850px !important;
          background-color:#030521 !important;
        }
      </style>
    </html>
    </panel>
  </row>
</form>