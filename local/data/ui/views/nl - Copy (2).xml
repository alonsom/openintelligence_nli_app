<form hideEdit="true" theme="dark">
  <init>
    <set token="timechart_tk">timechart</set>
    <set token="MyPanelJobSID">$job.sid$</set>
    <unset token="form.adjective"></unset>
    <unset token="form.entity"></unset>
    <unset token="form.adverb"></unset>
    <unset token="form.event1"></unset>
    <unset token="form.help_tk"></unset>
    <unset token="manual_tk"></unset>
  </init>
  <label>Natural Language Search</label>
  <search id="base">
    <query>$form.splquery$ | eval form.query="$form.query$"</query>
    <earliest>$time.earliest$</earliest>
    <latest>$time.latest$</latest>
  </search>
  <search id="warnings">
    <query>| `check_rest_api` 
		   | fields msg, reset 
    </query>
  </search>
  <fieldset submitButton="false" autoRun="true">
    <html>
      <a target="_self" href="nl?form.query=">Reset the form before start building a new query (click here to reset)</a>
      <br/>
    </html>
    <input id="text" type="text" token="query" searchWhenChanged="true" rejects="$help_tk$" >
      <label>Your Natural Language Query</label>
      <change>
        <condition value="">
          <unset token="manual_tk"></unset>
        </condition>
        <condition>
          <set token="manual_tk">on</set>
        </condition>
      </change>
    </input>
    <input type="multiselect" token="adjective" searchWhenChanged="true" rejects="$event1$" depends="$help_tk$,$entity$">
      <label>Adjective</label>
      <fieldForLabel>adjective_clean</fieldForLabel>
      <fieldForValue>adjective</fieldForValue>
      <search>
        <query>| `meta_query("adjective($entity$)")` 
               | rename result AS adjective 
               | eval adjective_clean=replace(adjective,"\_"," ")</query>
      </search>
      <!--change>
        <condition value="any">
          <set token="query">"$entity$"</set>
            <set token="manual_tk">on</set>
        </condition>
        <condition>
          <set token="query">"$adjective$ $entity$"</set>
            <set token="manual_tk">on</set>
        </condition>
      </change -->
      <choice value="any">Any</choice>
      <default>any</default>
      <delimiter>,</delimiter>
      <initialValue>any</initialValue>
    </input>
    <input type="dropdown" token="entity" searchWhenChanged="true" rejects="$event1$" depends="$help_tk$">
      <label>Entity</label>
      <fieldForLabel>entity_clean</fieldForLabel>
      <fieldForValue>entity</fieldForValue>
      <search>
        <query>| inputlookup cached_entity.csv
               | eval entity_clean=replace(entity,"\_"," ")</query>
      </search>
      <change>
        <condition>
          <unset token="query"></unset>
        </condition>
      </change>
    </input>
    <input type="link" token="entityno" searchWhenChanged="false" depends="$help_tk$,$entity$,$event1$">
      <label></label>
      <fieldForLabel>adjective_entity</fieldForLabel>
      <fieldForValue>entity</fieldForValue>
      <search>
        <query>| makeresults | eval entity="$entity$", adjective_entity="$adjective$ $entity$ with "</query>
      </search>
    </input>
    <input type="multiselect" token="adverb" searchWhenChanged="true" depends="$help_tk$,$entity$,$event1$">
      <label>Modifier</label>
      <fieldForLabel>adverb_clean</fieldForLabel>
      <fieldForValue>adverb</fieldForValue>
      <search>
        <query>| `meta_query("adverb($event1$)")` 
               | rename result AS adverb
               | eval adverb_clean=replace(adverb,"\_"," ")
        </query>
      </search>
      <!--change>
        <condition match="$event1$ == $event1$">
          <set token="query">$adjective$ $entity$ $adverb$ $event1$</set>
         <set token="manual_tk">on</set>
        </condition>
      </change-->
      <choice value="any">Any</choice>
      <default>any</default>
      <initialValue>any</initialValue>
      <delimiter>,</delimiter>
    </input>
    <input type="dropdown" token="event1" searchWhenChanged="true" depends="$help_tk$,$entity$">
      <label>Event</label>
      <fieldForLabel>event_clean</fieldForLabel>
      <fieldForValue>event</fieldForValue>
      <search>
        <query>| inputlookup cached_event.csv where entity="$entity$" AND entity!="eventRoot" 
               | eval event_clean=replace(event,"\_"," ")
        </query>
      </search>
      <!--change>
        <condition match="$event1$ == $event1$">
          <set token="query">"$adjective$ $entity$ $adverb$ $event1$"</set>
          <set token="manual_tk">on</set>
        </condition>
      </change-->
    </input>
    <!--input type="link" token="event" searchWhenChanged="false" depends="$help_tk$,$entity$,$event$,$and_nl$">
      <label>Event</label>
      <fieldForLabel>event_clean</fieldForLabel>
      <fieldForValue>event</fieldForValue>
      <search>
        <query>| makeresults 
               | eval event="$event$"
               | eval event_clean=replace(event,"\_"," ")</query>
      </search>
    </input-->
    <html>
      <br/>
    </html>
    <input type="checkbox" token="help" searchWhenChanged="true">
      <label>Options</label>
      <choice value="on">Help</choice>
      <change>
        <condition value="on">
          <set token="help_tk">on</set>
        </condition>
        <condition>
          <unset token="help_tk"></unset>
        </condition>
      </change>
    </input>
    <input type="dropdown" token="visualisation" depends="$form.event$,$form.splquery$" searchWhenChanged="true">
      <label>Visualisation</label>
      <choice value="timechart">Time Chart</choice>
      <choice value="pivot">Pivot</choice>
      <change>
        <condition value="timechart">
          <set token="timechart_tk">timechart</set>
          <unset token="pivot_tk"></unset>
        </condition>
        <condition value="pivot">
          <unset token="timechart_tk"></unset>
          <set token="pivot_tk">pivot</set>
        </condition>
      </change>
      <default>timechart</default>
      <initialValue>timechart</initialValue>
    </input>
    <input type="time" token="time" depends="$form.event$" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row depends="$help_tk$" rejects="$entity$">
    <panel>
      <html>
        <p>
          <strong>Select an Entity.</strong>
          <br/>
    Start by selecting a relevant subject/object/component for your search (e.g. <i>account</i> is the main entity in the search: <i>privileged account with a failed authentication</i>). This entity will be part of the query result and might be used for joining events (if needed)
        </p>
    </html>
    </panel>
  </row>
  <row depends="$entity$,$help_tk$" rejects="$event$">
    <panel>
      <html>
        <p>
          <strong>Execute the generated entity query and/or select relevant adjectives</strong>
          <br/>
          <strong>*</strong>To execute a query, select an optional time period and click on the splquery above
          <br/>
          <strong>*</strong> You could select any number of optional adjectives for qualifying the selected entity,  like <i>privileged</i> for privileged accounts, <i>all known</i> for well know entities or just leave <i>any</i> for matching any entity.
          <br/>
          <strong>*</strong> You could also select an event (e.g. <i>authentication</i> in the search: <i>privileged account with a failed authentication</i>).
        </p>
    </html>
    </panel>
</row>
  <row depends="$event$,$help_tk$">
    <panel>
      <html>
        <p>
          <strong>Click on "Visualise Query"</strong>
          <br/>
          <strong>*</strong>Click on "Visualise Query" to execute the selected query and visualise the results in different ways
          <br/>
          <strong>*</strong>You could add one or more adverbs to qualify the events of interest
          <br/>
          <strong>*</strong>You could also click on "Refine Query" to build more complex correlation/statistical queries
        </p>
    </html>
    </panel>
  </row>
<row rejects="$form.query$,$query$,$entity$,$event1$">
    <panel>
      <title>Latest queries</title>
      <table>
        <search>
          <query>index=_audit action=search info=granted search_id=*verylargoadmin_* app=openintelligence_nli_app  provenance="UI:Dashboard:nl" NOT search="*process_query*" NOT search="*check_rest_api*" NOT "Error:no response" NOT "12222253" | append [search index=_internal sourcetype=splunkd action=search info=granted search=*] | eval meta_query="12222253" | fields - _* | eval search=split(search,"form.query="), splquery=mvindex(search,0), query=mvindex(search,1), "Visualise Query"="CLICK HERE", "Refine Query"="CLICK HERE" | table timestamp, user, query, splquery, "Visualise Query", "Refine Query"</query>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
      </table>
    </panel>
  </row>
  <row depends="$adjective$,$entity$,$adverb$,$event1$" rejects="$manual_tk$">
    <panel>
      <title>Select Action</title>
      <table>
        <search>
          <query>| `process_query("$adjective$ $entity$ with $adverb$ $event1$")` | eval event="$event1$",caveats=if(match(splquery,"summariesonly"),"Results incorrect if Model ".event." has not been accelerated","")</query>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <fields>["full_query","splquery","Visualise Query","Refine Query","status","caveats"]</fields>
        <drilldown>
          <condition field="full_query"></condition>
          <condition field="splquery"></condition>
          <condition field="status"></condition>
          <condition field="caveats"></condition>
          <condition field="Visualise Query">
            <link>nl?form.manual_tk=on&amp;form.full_query=$row.full_query$&amp;form.splquery=$row.splquery$&amp;form.event=$row.event$&amp;form.query=$row.query$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$&amp;form.and=$row.and$&amp;form.query1=$row.query1$</link>
          </condition>
          <condition field="Refine Query">
            <link>nl_refine?form.manual_tk=on&amp;form.full_query=$row.full_query$&amp;form.splquery=$row.splquery$&amp;form.event=$row.event$&amp;form.query=$row.query$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$&amp;form.and=$row.and$&amp;form.query1=$row.query1$</link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row depends="$form.query$,$manual_tk$">
    <panel>
      <title>Select Action</title>
      <table>
        <search>
          <query>| `process_query("$query$")` | eval caveats=if(match(splquery,"summariesonly"),"Results incorrect if Model has not been accelerated","")</query>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <fields>["full_query","splquery","Visualise Query","Refine Query","status","caveats"]</fields>
        <drilldown>
          <condition field="full_query"></condition>
          <condition field="splquery"></condition>
          <condition field="status"></condition>
          <condition field="caveats"></condition>
          <condition field="Visualise Query">
            <link>nl?form.manual_tk=on&amp;form.full_query=$row.full_query$&amp;form.splquery=$row.splquery$&amp;form.event=$row.event$&amp;form.query=$row.query$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$&amp;form.and=$row.and$&amp;form.query1=$row.query1$</link>
          </condition>
          <condition field="Refine Query">
            <link>nl_refine?form.manual_tk=on&amp;form.full_query=$row.full_query$&amp;form.splquery=$row.splquery$&amp;form.event=$row.event$&amp;form.query=$row.query$&amp;form.stats_op=$row.stats_op$&amp;form.by=$row.by$&amp;form.and=$row.and$&amp;form.query1=$row.query1$</link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row depends="$form.splquery$">
    <panel>
      <table>
        <title>Matching Events for $form.full_query$</title>
        <search base="base" depends="$form.event$">
          <query>| fields *.name,count*,$form.event$.*,host*, source*, sourcetype* | fields - _raw</query>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
    <panel depends="$form.by$,$timechart_tk$" rejects="$pivot_tk$">
      <title>Visualisation</title>
      <chart>
        <title></title>
        <search base="base">
          <query>| timechart count by $form.by$</query>
        </search>
        <option name="charting.chart">line</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel depends="$form.by$,$pivot_tk$" rejects="$timechart_tk$">
      <title>Visualisation</title>
      <chart>
        <search base="base">
          <query>| stats count by $form.by$</query>
        </search>
        <option name="charting.chart">line</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row depends="noshow">
    <panel>
      <html>
        <!--color:#1A237E !important;
          background-color:#F0F0F0 !important; -->
      <style>
        .splunk-textinput {
          min-width: 550px !important;
          width: 750px !important;
          max-width: 850px !important;
          background-color:#030521 !important;
        }
      </style>
    </html>
    </panel>
  </row>
</form>